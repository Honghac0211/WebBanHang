<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>MoonShoop</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />

</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg " style="background: #FFC3C3; color: #ffffff">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#">
                <img src="~/imgmp/logo.PNG" style="width:40px;height:40px" class="rounded" />
            </a>
            <a class="navbar-brand" href="#!">MoonShoop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent" background:#FA748F>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item nav-link active" style="color:black">
                        @Html.ActionLink("Trang chủ", "HomeTrangChu", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Đăng ký", "SinUp", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Đăng nhập", "Login", "Home")
                    </li>
                </ul>
            </div>
            @*@using (Html.BeginForm("HomeTrangChu", "Home"))
            {
                <input class="form-control mr-2 w-auto" name="txt_search" type="search" placeholder="Nhập tên sản phẩm" aria-label="Search" />
                <button class="btn btn-outline-dark" type="submit">Search</button>}*@
            <div>
                <form class="d-flex" style="padding-left:20px">

                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        @Html.ActionLink("Giỏ Hàng", "GioHang", "GioHang")
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>


