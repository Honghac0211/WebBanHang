@using MoonShop.Models
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Share/LayoutHome.cshtml";
}

@model List<GioHang>

<div class="card border-dark">
    <table class="table">
        <tr style="background-color:lightpink">
            <th>Mã giỏ hàng</th>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Gía bán</th>
            <th>Thành tiền</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.ID_GioHang</td>
                <td width="12%">@item.ID_SanPham</td>
                <td width="26%">@item.TenSanPham</td>
                @*<td width="22%"><img src="@Url.Content("~/Images/"+item.sAnhBia)" width="150%" /></td>*@
                @*@using (Html.BeginForm("GioHang", "GioHang", new { @MaGH = item.ID_GioHang }))
                {*@
                <td width="12%"><input type="number" min="1" name="txtSoLuong" value="@item.SoLuong" size="2" /></td>
                <td width="12%">@String.Format("{0:0,0}", item.Gia)</td>
                <td width="16%">@String.Format("{0:0,0}", item.ThanhTien)</td>
                <td>@Html.ActionLink("Delete", "XoaGioHang", "GioHang", new { id = item.ID_GioHang }, null)</td>
                <td></td>
            </tr>
        }
    <tr style="background-color:lightpink">
        <td colspan="2" style="color: blueviolet; font-weight: bold; text-align: right">Tổng cộng:</td>
        <td style="color: blueviolet; font-weight: bold">Số Lượng: @Model.Count</td>
        <td></td>
        <td colspan="2" style="color:blueviolet;font-weight:bold;text-align:left">Tổng Tiền: @String.Format("{0:0,0}", Model.Sum(n => n.ThanhTien))</td>
        <td colspan="3" style="color:blueviolet;font-weight:bold;text-align:left">@Html.ActionLink("Thanh toán", "ThanhToan", "MuaHang") </td>
    </tr>
    </table>

</div>



